<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.learnremoteproject">

    <permission
        android:name="com.example.administrator.permission.ACCESS_SERVICE"
        android:protectionLevel="normal" >
    </permission>

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <service
            android:name=".MyRemoteService"
            android:enabled="true"
            android:process=":com.remote.thisProcessNameIsServiceProcess"
            android:permission="com.example.administrator.permission.ACCESS_SERVICE">
            <intent-filter>
                <action android:name="com.example.administrator.MyRemoteService" />
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </service>
    </application>

</manifest>
